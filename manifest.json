{
  "manifest_version": 3,
  "name": "Arc Tab Switcher",
  "version": "3.0.0",
  "description": "Minimal MRU tab switcher like Arc/Zen - cycle through your most recent tabs instantly",
  "permissions": [
    "tabs",
    "scripting",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "options_page": "options.html",
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "Arc Tab Switcher Settings"
  },
  "commands": {
    "tab-switcher-forward": {
      "suggested_key": {
        "default": "Ctrl+2",
        "mac": "Ctrl+2"
      },
      "description": "Show tab switcher and go forward"
    },
    "tab-switcher-backward": {
      "suggested_key": {
        "default": "Ctrl+3",
        "mac": "Ctrl+3"
      },
      "description": "Show tab switcher and go backward"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["styles.css", "icon*.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
